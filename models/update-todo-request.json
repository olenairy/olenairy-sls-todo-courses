{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "update-todo-request",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^(?!\\s*$).+"
    },
    "dueDate": {
      "type": "string",
      "pattern": "^(?!\\s*$).+"
    },
    "done": {
      "type": "boolean",
      "pattern": "^(?!\\s*$).+"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}